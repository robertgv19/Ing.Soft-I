@using Ing.soft_I.Models;
@model List<insumo>

    
    <H1>Lista de insumos</H1>
   
        <div class="row">
                        <div class="col-9">
                            <table class="table table-dark table-striped">
                            <thead>
                               <tr>
                                 <th scope="col">id_insumo</th>
                                 <th scope="col">nominsumo</th>
                                 <th scope="col">cantinsumostock</th>
                               </tr>
                            </thead>

                            @foreach (var insumos in Model){
                             
                            <tr>
                                <td>@insumos.idinsumo</td>
                                <td>@insumos.nominsumo</td>
                                <td>@insumos.cantinsumo</td> 
                            </tr>
                            }

                            </table>
                        </div>

                        <div class="col-3">
                    
                                <a class="nav-link text-dark" asp-controller="Insumos" asp-action="Nuevo_insumo">
                                    <button type="submit" class="btn btn-primary">Agregar insumos
                                    </button>
                                </a><br>

                                <a class="nav-link text-dark" asp-controller="" asp-action="">
                                    <button type="submit" class="btn btn-primary">Registrar entrada/salida
                                    </button>
                                </a><br>

                            <form asp-controller="Insumos" asp-action="Modificar_insumo">
                            <input name="id" type="text" class="form-control" placeholder="Modificar producto"><br><br>

                            <button type="submit" class="btn btn-primary">       Modificar        </button><br>
                            </form>
                        </div>  
           

        </div>